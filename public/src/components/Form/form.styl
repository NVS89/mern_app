@import "../../variables.styl"

.form-wrapper
    width 100%
    display flex
    justify-content center
.form
    display flex
    padding: 15px
    align-items center
    flex-direction column
    flex-wrap wrap
    border 1px solid $grey-border
    border-radius 15px
    margin 20px
    &_label
        font-weight bold
        line-height 20px
        height 20px
    &_field
        min-width 200px
        line-height 20px

    .field-container
        min-width 300px
        margin 15px
        display flex
        justify-content space-between
        align-items center
    .button-container
        justify-content center