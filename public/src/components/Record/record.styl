@import "../../variables.styl"

.list
    &-wrapper
        display inline-flex
        padding 15px
        flex-direction column
        flex-wrap wrap
        border 1px solid $grey-border
        border-radius 15px
        margin 20px
    &-row, &-header
        display flex
        &:nth-child(2n)
            background-color $grey-row

    &-header
        .list-cell
            cursor pointer 
    &-cell 
        width 100px  
        margin auto
        padding 15px
        text-align center 
