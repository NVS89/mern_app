@import "../../variables.styl"

.list
    &-wrapper
        display inline-flex
        padding 15px
        flex-direction column
        flex-wrap wrap
        border 1px solid $border-grey
        border-radius 15px
        margin 20px
    &-row, &-header
        display flex
    &-row:nth-child(odd)
            background-color $row-grey
    &-header
        .list-cell
            cursor pointer 
    &-cell 
        width 100px  
        padding 15px
        text-align center 
